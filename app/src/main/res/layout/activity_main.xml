<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <!-- Top area with animated character + hunger + mood + choose button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <!-- Selected Character GIF -->

        <!-- Hunger Label -->

        <!-- Hunger Bar -->

        <TextView
            android:id="@+id/tvHungerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hunger:"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/homeHungerBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginBottom="10dp"
            android:max="100" />

        <!-- Mood Label -->
        <TextView
            android:id="@+id/tvMoodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood:"
            android:textSize="18sp" />

        <!-- Mood Status -->
        <TextView
            android:id="@+id/tvMoodStatusHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ™‚ Normal"
            android:textSize="20sp"
            android:layout_marginBottom="15dp" />

        <ImageView
            android:id="@+id/selectedCharacterImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside" />


        <!-- Choose Character Button -->
        <Button
            android:id="@+id/chooseCharacterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Character"
            android:layout_marginTop="12dp" />

    </LinearLayout>


    <!-- Task section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnTask1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#E5DAFF"
                android:drawableTop="@drawable/ic_home"
                android:gravity="center"
                android:text="Task 1"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnTask2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#E5DAFF"
                android:drawableTop="@drawable/ic_play"
                android:gravity="center"
                android:text="Task 2"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnTask3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#E5DAFF"
                android:drawableTop="@drawable/ic_food"
                android:gravity="center"
                android:text="Task 3"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp" />

</LinearLayout>
