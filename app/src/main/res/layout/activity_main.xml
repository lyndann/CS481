<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F8FF"
    tools:context=".HomeActivity">

    <!-- Background area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="1"
        android:gravity="center">

        <!-- Background image (house & trees) -->


        <!-- Bittle character in center -->
        <ImageView
            android:id="@+id/bittleCharacter"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:contentDescription="Bittle character"
            android:src="@drawable/ic_bittle" />
    </FrameLayout>

    <!-- Task section -->

    <!-- Bottom Navigation with custom icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Task Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnTask1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#E5DAFF"
                android:drawableTop="@drawable/ic_home"
                android:gravity="center"
                android:text="Task 1"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnTask2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#E5DAFF"
                android:drawableTop="@drawable/ic_play"
                android:gravity="center"
                android:text="Task 2"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnTask3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#E5DAFF"
                android:drawableTop="@drawable/ic_food"
                android:gravity="center"
                android:text="Task 3"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#DAD0FF"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Home"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="#4A4A4A"
            android:backgroundTint="#E5DAFF"
            android:textColor="#000000"
            android:gravity="center" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Play"
            android:drawableTop="@drawable/ic_play"
            android:drawableTint="#4A4A4A"
            android:backgroundTint="#E5DAFF"
            android:textColor="#000000"
            android:gravity="center" />

        <Button
            android:id="@+id/btnFood"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Food"
            android:drawableTop="@drawable/ic_food"
            android:drawableTint="#4A4A4A"
            android:backgroundTint="#E5DAFF"
            android:textColor="#000000"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/txDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp" />


</LinearLayout>
