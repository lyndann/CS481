<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- ðŸŒ¸ ANIMATED BACKGROUND (your GIF) -->
    <ImageView
        android:id="@+id/homeBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sky_background" />

    <!-- CONTENT OVERLAY -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- HEADER -->
            <TextView
                android:id="@+id/tvHomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¡ Bittle Home"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-rounded"
                android:textColor="#4B3B63"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvHomeSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take care of your Bittle and grow together!"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="#6D5A89"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center_horizontal" />

            <!-- TOP STATUS CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_task_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="18dp">

                <!-- Selected Character GIF -->
                <ImageView
                    android:id="@+id/selectedCharacterImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Character" />

                <!-- Choose character button -->
                <Button
                    android:id="@+id/chooseCharacterBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Character"
                    android:backgroundTint="#E5DAFF"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-rounded"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp" />

                <!-- Hunger -->
                <TextView
                    android:id="@+id/tvHungerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hunger"
                    android:textColor="#4B3B63"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginTop="14dp" />

                <ProgressBar
                    android:id="@+id/homeHungerBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:max="100"
                    android:layout_marginTop="4dp" />

                <!-- Mood -->
                <TextView
                    android:id="@+id/tvMoodLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mood"
                    android:textColor="#4B3B63"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvMoodStatusHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ™‚ Okay"
                    android:textSize="20sp"
                    android:textColor="#4B3B63"
                    android:fontFamily="sans-serif-rounded"
                    android:layout_marginBottom="6dp" />

                <!-- Tokens -->
                <TextView
                    android:id="@+id/tvTokenCountHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tokens: 0"
                    android:textSize="16sp"
                    android:textColor="#4B3B63"
                    android:fontFamily="sans-serif" />

                <!-- Level -->
                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1 (XP: 0)"
                    android:textSize="16sp"
                    android:textColor="#4B3B63"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="4dp" />

                <!-- Tasks tracker -->
                <TextView
                    android:id="@+id/tvTasksTracker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tasks completed today: 0/3"
                    android:textSize="15sp"
                    android:textColor="#7A6A92"
                    android:fontFamily="sans-serif" />

                <!-- Token popup -->
                <TextView
                    android:id="@+id/tvTokenPopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+10 tokens!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:visibility="gone"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- SINGLE BUTTON TO OPEN TASKS PAGE -->
            <Button
                android:id="@+id/btnOpenTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¾Open Daily TasksðŸ‘¾"
                android:backgroundTint="#FFD6F3"
                android:fontFamily="sans-serif-rounded"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_marginBottom="20dp" />

            <!-- Optional status text -->
            <TextView
                android:id="@+id/txDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#4B3B63"
                android:fontFamily="sans-serif" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
