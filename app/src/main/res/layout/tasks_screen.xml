<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title / Header -->
        <TextView
            android:id="@+id/tvTasksTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ¸ Daily Tasks"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep Bittle happy by clearing your quests!"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#666666"
            android:layout_marginBottom="12dp" />

        <!-- Cute stats card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_task_card"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvTokenCountTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokens: 0"
                android:textSize="16sp"
                android:textColor="#4B3B63" />

            <TextView
                android:id="@+id/tvLevelTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1 (XP: 0)"
                android:textSize="16sp"
                android:textColor="#4B3B63" />

            <TextView
                android:id="@+id/tvTasksTrackerTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasks completed today: 0/3"
                android:textSize="15sp"
                android:textColor="#7A6A92"
                android:layout_marginTop="4dp" />

            <!-- Token popup inside card -->
            <TextView
                android:id="@+id/tvTokenPopupTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10 tokens!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:visibility="gone"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Reset button -->
        <Button
            android:id="@+id/btnResetTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset today&#39;s tasks"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#E5DAFF"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- TASK 1 CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_task_card"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task 1 ðŸŒ±"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4B3B63"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etTask1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., Rest up, stretch, drink water"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="4dp"
                android:textColorHint="#AA88AA" />

            <CheckBox
                android:id="@+id/cbTask1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… Mark as done"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- TASK 2 CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_task_card"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task 2 ðŸŽ®"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4B3B63"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etTask2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., Play Slot Game once"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="4dp"
                android:textColorHint="#AA88AA" />

            <CheckBox
                android:id="@+id/cbTask2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… Mark as done"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- TASK 3 CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_task_card"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task 3 â­"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#4B3B63"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etTask3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., Level up Bittle or complete a challenge"
                android:padding="8dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="4dp"
                android:textColorHint="#AA88AA" />

            <CheckBox
                android:id="@+id/cbTask3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… Mark as done"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
