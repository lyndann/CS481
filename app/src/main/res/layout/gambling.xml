<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/reelsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:background="@drawable/slot_machine_frame"
        app:layout_constraintBottom_toTopOf="@+id/addCoinButton"
        app:layout_constraintEnd_toStartOf="@+id/lever"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reel11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/cherry" />

            <ImageView
                android:id="@+id/reel12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/cherry" />

            <ImageView
                android:id="@+id/reel13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/cherry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reel21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/grapes" />

            <ImageView
                android:id="@+id/reel22"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/cherry" />

            <ImageView
                android:id="@+id/reel23"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/grapes" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reel31"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/cherry" />

            <ImageView
                android:id="@+id/reel32"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/orange" />

            <ImageView
                android:id="@+id/reel33"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/orange" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lever"
        android:layout_width="56dp"
        android:layout_height="180dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:rotation="-168"
        android:rotationX="0"
        app:layout_constraintBottom_toTopOf="@+id/addCoinButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reelsLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <View
            android:layout_width="6dp"
            android:layout_height="140dp"
            android:background="#666" />

        <View
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/handle_knob" /> <!-- red circle -->
    </LinearLayout>

    <Button
        android:id="@+id/addCoinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Coin"
        app:layout_constraintTop_toBottomOf="@id/reelsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tokenLayout"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/tokenLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/addCoinButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tokenLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tokens: " />

        <TextView
            android:id="@+id/tokenCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="187dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="11dp"
        android:text="Oranges: 20"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tokenLayout" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="8dp"
        android:text="Grapes: 5"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="187dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="47dp"
        android:text="Cherries: 50"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="149dp"
        android:layout_marginBottom="84dp"
        android:text="Payouts:"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reelsLayout"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
